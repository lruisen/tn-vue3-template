{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "/#/*": ["./types/*"]
    },
    "lib": ["ESNext", "Dom", "DOM.Iterable"],
    "types": ["@dcloudio/types", "@tuniao/tnui-vue3-uniapp/global"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/**/*.d.ts"],
  "exclude": ["node_modules", "unpackage", "dist", "**/*.js"]
}
